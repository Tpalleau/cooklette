<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/savedFragment">

    <fragment
        android:id="@+id/savedFragment"
        android:name="com.example.cooklette.frags.SavedFragment"
        android:label="fragment_saved"
        tools:layout="@layout/fragment_saved" >
        <action
            android:id="@+id/action_savedFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_savedFragment_to_recipeFragment"
            app:destination="@id/recipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.cooklette.frags.AddFragment"
        android:label="AddFragment" >
        <action
            android:id="@+id/action_addFragment_to_savedFragment"
            app:destination="@id/savedFragment" />
        <argument
            android:name="recipe_id"
            app:argType="integer"
            android:defaultValue="-1"/>
    </fragment>
    <fragment
        android:id="@+id/recipeFragment"
        android:name="com.example.cooklette.frags.RecipeFragment"
        android:label="RecipeFragment" >

        <action
            android:id="@+id/action_recipeFragment_to_savedFragment"
            app:destination="@id/savedFragment" />
        <argument android:name="recipeId"
            app:argType="integer" />

    </fragment>

</navigation>
