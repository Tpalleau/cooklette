    <!-- Dark Theme -->
    <style name="Theme.Cooklette.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize the primary color to a deep blue -->
        <item name="colorPrimary">#0D47A1</item>
        <!-- Customize the secondary color to a bright cyan -->
        <item name="colorSecondary">#00ACC1</item>
        <!-- Customize the background color to a dark gray -->
        <item name="android:windowBackground">#303030</item>
        <item name="backgroundColor">#303030</item>
        <!-- Customize the text color to a light gray -->
        <item name="android:textColorPrimary">#DEDEDE</item>
        <item name="colorPrimaryDark">#0F1E75</item>
        <!-- Customize the accent color to a deep orange -->
        <item name="colorAccent">#FF5722</item>
        <!-- Customize the color of buttons to a cool blue -->
        <item name="android:colorButtonNormal">#2196F3</item>
        <!-- Customize the color of links to a bright green -->
        <item name="android:textColorLink">#00E676</item>
        <!-- Customize the color of checkboxes to a rich brown -->
        <item name="colorControlNormal">#8D6E63</item>
    </style>

    <!-- App Theme -->
    <style name="Theme.Cooklette" parent="Theme.Cooklette.Light">
        <!-- Customize the attributes based on the theme mode -->
        <item name="android:windowIsTranslucent">false</item>
    </style>
